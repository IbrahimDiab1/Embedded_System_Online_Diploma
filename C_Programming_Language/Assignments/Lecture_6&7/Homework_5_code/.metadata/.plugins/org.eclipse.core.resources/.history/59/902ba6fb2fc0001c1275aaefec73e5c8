/*
 * Program to Store Information(name, roll and marks) of a Student Using Structure
 */

#include <stdio.h>
#include <stdlib.h>

struct S_student
{
	char name[];
	int rollNum;
	float mark;

};


int main()
{
	setvbuf(stdout, NULL, _IONBF, 0);
	setvbuf(stderr, NULL, _IONBF, 0);

	struct S_student s;
	pritnf("enter information of student:\n");
	printf("\nEnter name: ");
	scanf("%s",s.name);
	printf("\nEnter roll number: ");
	scanf("%d",s.rollNum);
	printf("\nEnter marks: ");
	scanf("%f",s.mark);
	pritnf("\n\nenter information of student:\n");
	pritnf("\nname:%s",s.name);
	printf("\nRoll:%d",s.rollNum);
	printf("\nMarks:%f",s.mark);





	return 0;
}
